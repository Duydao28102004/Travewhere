<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/rounded_rectangle"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_hotel_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hotel Name"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    <TextView
        android:id="@+id/tv_room_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Room Type"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_hotel_name"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    <TextView
        android:id="@+id/tv_check_in_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check-in Date"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_room_type"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    <TextView
        android:id="@+id/tv_check_out_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Check-out Date"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_check_in_date"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    <TextView
        android:id="@+id/tv_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Total Price"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_check_out_date"
        app:layout_constraintEnd_toStartOf="@id/btn_cancel"/>

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        android:text="Cancel this booking"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/btnStartChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnStartChat"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:backgroundTint="@color/accent"
        android:text="Chat"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toEndOf="@+id/tv_check_out_date"
        app:layout_constraintTop_toBottomOf="@+id/btn_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>
