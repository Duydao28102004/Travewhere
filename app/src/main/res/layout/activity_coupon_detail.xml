<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CouponDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary">

        <RelativeLayout
            android:id="@+id/btnBackLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:padding="20dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="Back Button"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnBack"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Coupons"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <!-- Coupon Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F7F7F7"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tvCouponTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount up to 80k VND"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#000000" />

        <!-- Coupon Code -->
        <TextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#C8E6C9"
            android:padding="8dp"
            android:textColor="#29AB4A"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- New Min Spend TextView -->
        <TextView
            android:id="@+id/tvMinSpend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/min_spend_400k_vnd"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingBottom="8dp" />

        <!-- New Discount TextView -->
        <TextView
            android:id="@+id/tvDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discount_80k_vnd"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingBottom="16dp" />

        <!-- Terms and Conditions -->
        <TextView
            android:id="@+id/tvCouponDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/coupon_description"
            android:textSize="14sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="8dp" />

        <!-- Copy Coupon Code Button -->
        <Button
            android:id="@+id/btnCopyCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#29AB4A"
            android:text="@string/copy_coupon_code"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
