<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    tools:context=".CouponDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/primary">

        <RelativeLayout
            android:id="@+id/btnBackLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:contentDescription="Back Button"
                android:src="@drawable/ic_arrow_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true" />

            <TextView
                android:id="@+id/tvPageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/btnBack"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:text="Coupons"
                android:textColor="@android:color/white"
                android:textSize="20dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <!-- Search Bar -->
        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search for places"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="32dp"
            android:background="@drawable/rounded_rectangle"
            android:elevation="8dp" />

    </LinearLayout>

    <!-- Coupon Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F7F7F7"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_margin="16dp"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tvCouponTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Discount upto 80k VND"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"
            android:textColor="#000000" />

        <!-- Coupon Code -->
        <TextView
            android:id="@+id/tvCouponCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KS1212LUXINY"
            android:background="#C8E6C9"
            android:padding="8dp"
            android:textColor="#29AB4A"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:layout_marginBottom="16dp" />

        <!-- Terms and Conditions -->
        <TextView
            android:id="@+id/tvCouponDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Valid for bookings made through the app from 1st December 2024 to 25th January 2025.\n• Minimum spending is 400k VND.\n• Offer valid for one-time use per account.\n• Cannot be combined with other discounts or promotions.\n• Taxes and fees not included in the discount."
            android:textSize="14sp"
            android:textColor="#555555"
            android:lineSpacingExtra="4dp"
            android:paddingBottom="8dp" />

        <!-- Copy Coupon Code Button -->
        <Button
            android:id="@+id/btnCopyCouponCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#29AB4A"
            android:text="Copy Coupon Code"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</LinearLayout>
