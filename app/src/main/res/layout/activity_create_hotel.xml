<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Rounded Rectangle Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_rectangle"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Hotel"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/neutral_text"
                android:layout_marginBottom="16dp" />

            <!-- Name Input Field -->
            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Name"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Phone Input Field -->
            <EditText
                android:id="@+id/phoneEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- Address Display -->
            <TextView
                android:id="@+id/addressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Address"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <!-- Select Address Button -->
            <Button
                android:id="@+id/selectAddressButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Address"
                android:layout_marginBottom="8dp" />

            <!-- Room Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Room Types"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/roomTypeEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room Type" />

            <EditText
                android:id="@+id/priceEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Price per Night"
                android:inputType="numberDecimal" />

            <EditText
                android:id="@+id/capacityEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Room Capacity"
                android:inputType="number" />

            <Button
                android:id="@+id/addRoomButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Room" />

            <!-- Room List -->
            <TextView
                android:id="@+id/roomListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room List:"
                android:textSize="18sp"
                android:layout_marginTop="16dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/roomRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <!-- Save Details Button -->
            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Details" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>
