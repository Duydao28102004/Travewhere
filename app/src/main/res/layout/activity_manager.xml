<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- User Greeting -->
    <TextView
        android:id="@+id/greetingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome back, Phuc Hoang Thai!"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <!-- Total Income and Total Bookings Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Total Income Card -->
        <LinearLayout
            android:id="@+id/incomeCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/totalIncomeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Income"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/totalIncomeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,332 $"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/incomeSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see more >>"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Total Bookings Card -->
        <LinearLayout
            android:id="@+id/bookingsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/totalBookingsLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Bookings"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/totalBookingsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3,232"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bookingsSeeMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="see more >>"
                android:textColor="@color/secondary_text"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <!-- Accommodations List Label -->
            <TextView
                android:id="@+id/accommodationListLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accommodations List"
                android:textColor="@color/neutral_text"
                android:textStyle="bold"
                android:textSize="26sp" />

            <!-- Floating Action Button for Adding Hotels -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addHotelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginStart="30dp"
                android:src="@drawable/ic_add"
                android:contentDescription="Add Hotel"
                app:backgroundTint="@color/primary"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Accommodations List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accommodationList"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="8dp" />


    </LinearLayout>
</LinearLayout>